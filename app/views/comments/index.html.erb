<h1>Comment</h1>

<div class="span4 offset2" style="margin-top:15px;">
  <button class="btn pull-right" type="button"><%= link_to "Add Comment.", new_post_comment_path %></button>
</div>

<div>
	<% @comment.each do |comment| %>
    <% if !comment.parent_id.present? %>
    <div>
      <%= comment.user.user_name %>
      <%= " :- " %>
      <%= comment.content %>
      <%= link_to 'reply', new_post_comment_path(@post, parent_id: comment.id), remote: true, class: 'd-block' %></br>
      <%= button_to 'Like', post_likes_path(@post, comment_id: comment.id), method: :post %>
      <p><%= comment.likes.count %> <%= (comment.likes.count) == 1 ? 'Like' : 'Likes'%></p>
    	
    <% if comment.replies.any? %>
     <% comment.replies.each do |reply| %> 
       <%= reply.content %>
     <% end %>
    <% end %> 
    </div> 
    <% end %>
  <% end %>
  
</div>


  