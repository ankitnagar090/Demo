<div class="container">
	<center>
    <div >
      <%if @user.profile_photo.present?%>
        
        <%= image_tag @user.profile_photo, class: "rounded-circle", :size => "150x150"%>
      <% else%>
          <img src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp" class="rounded-circle" style="width: 150px;"
       alt="Avatar" />
      <% end %> 
    </div>
		<div >
			<h1 class="text-primary "><%= @user.user_name %> </h1>
		</div>
		<div class="profile-usertitle-job">     
			<%=  @user.bio%> 
		</div>
	
		<div class="profile-userbuttons">
			<button type="button" class="btn btn-success btn-sm"><%= @user.followers.count %> <%= link_to 'Followers', followers_users_path(user_id: @user.id) %></button>
			<button type="button" class="btn btn-danger btn-sm"><%= @user.followees.count %> <%= link_to 'Following', following_users_path(user_id: @user.id) %></button>
		</div></br>

		<div class="profile-userbuttons">
			<button type="button" class="btn btn-outline-primary "><%= link_to 'Edit profile', edit_profile_path(id: @user.id), :class => 'navbar-link' %></button>
		</div>

    <div class="profile-userbuttons">
      <button type="button" class="btn btn-outline-primary "><%= link_to 'show Requests', requested_users_path(user_id: @user.id), :class => 'navbar-link' %></button>
    </div>
    
	  <ul class="nav nav-tabs">
		  <li class="nav-item">
		  	<%= link_to "Show shared", shareds_path(user_id: current_user.id),class: "nav-link active" %>
		  </li>
		  <li class="nav-item">
		    <%= link_to "posts,", profiles_path, class: "nav-link active" %>
		  </li>
		  <li class="nav-item">
		    <a class="nav-link disabled">Reels</a>
		  </li>
		</ul>

	</center>
</div>