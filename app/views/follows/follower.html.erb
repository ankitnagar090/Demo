<%= render "shared/header" %>
<%=@follower.count %>
<% @follower.each do |follower| %>  
  <center>
  <div class="card mb-3" style="max-width: 640px;">
    <div class="row g-0">
      <div class="col-md-4">
        <%if follower.profile_photo.present?%>
          <%= image_tag url_for(follower.profile_photo),:size => "150x150", class: "rounded-circle"%>
          <% else%>
              <img src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp" class="rounded-circle" style="width: 150px;"
           alt="Avatar" />
        <%end%>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=follower.user_name %></h5>
          <p>
            <%=follower.full_name %>
            <%= link_to "user_profile", posts_path(search_key: follower.user_name) %> 
          </p>
        </div>
      </div>
    </div>
  </div>
  </center>
<% end %>
<% if @user.id == current_user.id %>
  <%= link_to "back", profiles_path %> 
<% else%>
  <%= link_to "back", posts_path(search_key: @user.user_name)%>  
<% end%>  
<%= render "shared/footer" %>